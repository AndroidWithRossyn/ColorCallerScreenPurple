<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/main_background"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/back1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:src="@drawable/backbtn" />
    <ImageView
        android:id="@+id/favourites"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:elevation="@dimen/_10dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/favourite_call" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/adsView0"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_page" />

        <ImageView
            android:id="@+id/lottieVideo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:elevation="2dp"
            android:visibility="gone"
            android:src="@drawable/person_anim" />

        <TextView
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lottieVideo"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:text="Priya Girin"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="+91 98763 45***"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/reply"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/phone_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/reply"
            android:elevation="10dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Reply with Message"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/carouselImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="10dp"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/btn_set_theam"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <ImageView
                android:id="@+id/img_recive"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:elevation="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/buttondefaultreceive" />

            <ImageView
                android:id="@+id/img_reject"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:elevation="10dp"
                android:src="@drawable/buttondefaultend" />
            <LinearLayout
                android:id="@+id/left_arrow_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_recive"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:elevation="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/left_arrow_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/green"
                    android:elevation="10dp"
                    android:src="@drawable/right_swipe"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/left_arrow_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/green"
                    android:elevation="10dp"
                    android:src="@drawable/right_swipe"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_arrow_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_reject"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:elevation="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/right_arrow_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/red"
                    android:elevation="10dp"
                    android:src="@drawable/backbtn"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/right_arrow_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/red"
                    android:elevation="10dp"
                    android:src="@drawable/backbtn"
                    android:visibility="visible" />

            </LinearLayout>


        </RelativeLayout>


